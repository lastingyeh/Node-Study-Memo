<!DOCTYPE html>
<html>

<%- include('./public/head.ejs')%>

<body>
  <%- include('./public/header.ejs')%>

  <section class='main floatfix'>

    <%- include('./public/aside.ejs')%>

    <section class='main-articles'>
      <ul>
        <% for(var i=0, max=articles.length;i<max;i++) {%>
          <li class='main-articles-item'>
            <h2>
              <a href="/articles/<%=articles[i].articleID%>">
                <%= articles[i].articleTitle %>
              </a>
            </h2>
            <section class='main-articles-items-des'>
              <p>
                <span>Author:
                  <%= articles[i].articleAuthor %>
                </span>
                <span>Published:
                  <%= articles[i].articleTime %>
                </span>
                <span>Visitors:
                  <%= articles[i].articleClick %>
                </span>
                <% if(user) { %>
                  <span class='delete'>
                    <a href='/delete/<%= articles[i].articleID %>'>Delete</a>
                  </span>

                  <span class='slash'>|</span>

                  <span class='modify'>
                    <a href='/modify/<%= articles[i].articleID %>'>Edit</a>
                  </span>
                <% } %>
              </p>
            </section>
          </li>
          <% } %>
      </ul>

      <% if(pageNum > 1) { %>
        <section class='page'>
          <% for(var i = 1, max = pageNum; i <= max; i++) { %>
            <span <% if(i == page) {%> class='active' <% } %>>
              <a href='/?page=<%=i%>'><%=i %></a>
            </span>
          <% } %>
        </section>
      <% } %>

    </section>
  </section>

  <%- include('./public/footer.ejs')%>
  
</body>

</html>